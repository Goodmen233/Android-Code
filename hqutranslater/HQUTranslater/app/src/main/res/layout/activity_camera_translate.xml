<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraTranslate">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:alpha="0.85">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/back_foreground" />

            <Spinner
                android:id="@+id/fromSpin"
                android:layout_width="128dp"
                android:layout_height="60dp"
                android:layout_marginLeft="9dp"
                android:entries="@array/lan" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"

                android:src="@drawable/trans_foreground"/>

            <Spinner
                android:id="@+id/toSpin"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:entries="@array/lan" />
<!--            <ImageButton-->
<!--                android:id="@+id/imageTranslateBtn"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:src="@drawable/translate"/>-->
        </LinearLayout>

        <ImageView
            android:id="@+id/resImage"
            android:layout_width="match_parent"
            android:layout_height="670dp"
            app:srcCompat="@mipmap/bg" />
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>